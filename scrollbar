SOURCE CODE FOR SCROLLBAR:
    import java.awt.*;   
      
    public class ScrolbarExample1 {    
    ScrolbarExample1() {    
                Frame f = new Frame("Scrollbar Example");    
     Scrollbar s= new Scrollbar(Scrollbar.HORIZONTAL,50,10,0,100); 
                s.setBounds (100, 100, 50, 100);  
      
           // adding scroll bar to the frame  
                f.add(s);    
      
           // setting size, layout and visibility of frame  
                f.setSize(400, 400);  
                f.setLayout(null);    
                f.setVisible(true);    
    }    
      
    // main method  
    public static void main(String args[]) {    
           new ScrolbarExample1();    
    }    
    }    

